<div class="infocontent">
	<div class="infocontent-title">{{feature.data.name}}</div>

	<div class="infocontent-description">
		
		{{#if feature.data.image_thumb}}
			<div class="infocontent-img-container pull-left">
			{{#if feature.data.image}}
				
				<a href="{{{feature.data.image}}}" class="infocontent-img-anchor" data-title="{{feature.data.name}}">
					<img class="infocontent-img" src="{{{feature.data.image_thumb}}}">
				</a>

			{{else}}
				<img class="infocontent-img" src="{{{feature.data.image_thumb}}}">
			{{/if}}
			</div>
		{{/if}}

		{{{feature.data.description}}}

		<div class="clearfix"></div>

		{{#if enable_tools}}
			<div class="infocontent-tools">
				{{#if enable_route}}
					<a href="#" class="infocontent-tools-link" id="infocontent-tools-route"><i class="glyphicon glyphicon-road"></i>&nbsp;{{transp 'Wyznacz trasę'}}</a>&nbsp;
				{{/if}}
				
				<a href="#" class="infocontent-tools-link" id="infocontent-tools-gps"><i class="glyphicon glyphicon-screenshot"></i>&nbsp;{{transp 'Współrzędne gps'}}</a>&nbsp;
				<a href="#" class="infocontent-tools-link" id="infocontent-tools-zoomin"><i class="glyphicon glyphicon-zoom-in"></i>&nbsp;{{transp 'Zbliż'}}</a>&nbsp;
			</div>

			<div class="infocontent-tools-add" id="infocontent-tools-gps-add">
				<dl class="dl-horizontal">
					<dt>{{transp 'szerokość'}}:</dt>
					<dd>{{gps.lat}}</dd>
					<dt>{{transp 'długość'}}:</dt>
					<dd>{{gps.lng}}</dd>
				</dl>
			</div>

			{{#if enable_route}}
				<div class="infocontent-tools-add" id="infocontent-tools-route-add">
					<form role="form" id="route_form">
						<table class="table table-condensed">
							<tr>
								<td><strong>{{transp 'Do:'}}</strong></td>
								<td>{{feature.data.name}}</td>
							</tr>
							<tr>
								<td><strong>{{transp 'Z:'}}</strong></td>
								<td><input type="text" class="form-control input-sm" id="route_form_from" placeholder="{{transp 'miejscowość/adres'}}"></td>
							</tr>
							<tr>
								<td>&nbsp;</td>
								<td><button type="submit" class="btn btn-default btn-sm">{{transp 'Wyznacz'}}</button></td>
							</tr>
						</table>
						

					</form>
				</div>
			{{/if}}
		{{/if}}

	</div>
</div>